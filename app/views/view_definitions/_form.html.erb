<%= form_with(model: view_definition, class: "contents") do |form| %>
  <% if view_definition.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(view_definition.errors.count, "error") %> prohibited this view_definition from being saved:</h2>

      <ul>
        <% view_definition.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-3 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
    <div class="sm:col-span-4">
      <%= form.label :content, class: "block text-sm/6 font-medium text-black" %>
      <div class="mt-2 mb-4">
        <div class="flex items-center gap-x-2">
          <div class="flex-grow rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600">
            <%= form.text_area :content, rows: 8, placeholder: "Enter your JSON view definition", class: "w-full border-0 bg-transparent py-1.5 pl-1 text-grey focus:ring-0 sm:text-sm/6" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= form.hidden_field :analysis_id, value: view_definition.new_record? ? params[:analysis_id] : view_definition.analysis_id %>

  <div class="inline mt-10">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "View definitions" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">View definitions</h1>
    <%= link_to "New view definition", new_view_definition_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="view_definitions" class="min-w-full">
    <% @view_definitions.each do |view_definition| %>
      <%= render view_definition %>
      <p>
        <%= link_to "Show this view definition", view_definition, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
